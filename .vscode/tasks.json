{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "g++",
			"args": [
				"-std=c++17",
				"-g",
				"${workspaceFolder}/src/lib/*.cpp",
				"${workspaceFolder}/src/main.cpp",
				"-o",
				"${workspaceFolder}/exec/main.exe"
			],
			"problemMatcher": "$gcc",
			"group": {
                "kind": "build",
                "isDefault": true
            }
		},
		{
			"label": "Run",
			"type": "shell",
			"command": "${workspaceFolder}/exec/main.exe",
			"problemMatcher": []
		},
		{
			"label": "Build and run",
			"type": "shell",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Build",
				"Run"
			],
			"problemMatcher": []
		}
	]
}
