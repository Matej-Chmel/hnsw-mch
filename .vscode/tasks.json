{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run",
			"linux": {
				"command": "python"
			},
			"windows": {
				"command": "py"
			},
			"args": [
				"-m",
				"src.main",
				"${workspaceFolder}/data/tasks/${input:type}_${input:rank}.py"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		}
	],
	"inputs": [
		{
			"id": "type",
			"type": "pickString",
			"description": "Choose the task type",
			"options": [
				"dataset_e",
				"dataset_q",
				"build_graph",
				"measure_graph"
			],
			"default": "dataset_e"
		},
		{
			"id": "rank",
			"type": "promptString",
			"description": "Enter number of the task in group",
			"default": "1"
		}
	]
}
